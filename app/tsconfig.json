{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@app/*": ["App/*"],
      "@common/*": ["App/Common/*"],
      "@core/*": ["App/Core/*"],
      "@editor/*": ["App/Editor/*"],
      "@scene/*": ["App/Scene/*"],
      "@widgets/*": ["App/Widgets/*"],
      "@features/*": ["App/Features/*"],
    },
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "checkJs": false
  },
  "include": [
    "src",
  ]
}
